    {
      "pattern": "^(fix|bug)(\\(.+\\))?:",
      "target": "bug"
    },
    {
      "pattern": "^(docs|doc)(\\(.+\\))?:",
      "target": "documentation"
    },
    {
      "pattern": "^(style)(\\(.+\\))?:",
      "target": "improvement"
    },
    {
      "pattern": "^(refactor)(\\(.+\\))?:",
      "target": "improvement"
    },
    {
      "pattern": "^(perf)(\\(.+\\))?:",
      "target": "performance"
    },
    {
      "pattern": "^(test)(\\(.+\\))?:",
      "target": "testing"
    },
    {
      "pattern": "^(build)(\\(.+\\))?:",
      "target": "build"
    },
    {
      "pattern": "^(ci)(\\(.+\\))?:",
      "target": "build"
    },
    {
      "pattern": "^(chore)(\\(.+\\))?:",
      "target": "improvement"
    },
    {
      "pattern": "^(revert)(\\(.+\\))?:",
      "target": "improvement"
    }
  ]
