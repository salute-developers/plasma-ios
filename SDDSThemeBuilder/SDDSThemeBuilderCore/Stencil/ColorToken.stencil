import SwiftUI
import UIKit

public extension ColorToken {
    {% for key, value in json %}
    static var {{ key }}: Self {
        Self(
            darkColor: Color(UIColor(hex: "{{ value.dark }}")),
            lightColor: Color(UIColor(hex: "{{ value.light }}"))
        )
    }
    {% endfor %}
}

public struct Colors {
    {% for key, value in json %}
    let {{ key }} = ColorToken.{{ key }}
    {% endfor %}
}
